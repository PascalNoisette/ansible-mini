networks:
- config:
    ipv4.address: auto
    ipv4.firewall: "false"
    ipv4.nat: "true"
    ipv6.address: auto
    ipv6.nat: "true"
  name: lxdbr0
  type: bridge
  project: default
storage_pools:
- config:
    size: 32GB
    source: /var/snap/lxd/common/lxd/disks/default.img
  name: default
  driver: btrfs
- config:
    size: 64GB
    source: /var/snap/lxd/common/lxd/disks/lounge.img
  name: lounge
  driver: btrfs
- config:
    size: 64GB
    source: /var/snap/lxd/common/lxd/disks/sapiens.img
  name: sapiens
  driver: btrfs
- config:
    size: 64GB
    source: /var/snap/lxd/common/lxd/disks/minion.img
  name: minion
  driver: btrfs
- config:
    size: 64GB
    source: /var/snap/lxd/common/lxd/disks/archimed.img
  name: archimed
  driver: btrfs
- config:
    size: 64GB
    source: /var/snap/lxd/common/lxd/disks/circadia.img
  name: circadia
  driver: btrfs
- config:
    size: 64GB
    source: /var/snap/lxd/common/lxd/disks/pericles.img
  name: pericles
  driver: btrfs
profiles:
- config:
    boot.autostart: "false"
    linux.kernel_modules: ip_tables,ip6_tables,netlink_diag,nf_nat,overlay
    raw.lxc: |-
      "lxc.aa_profile=unconfined
      lxc.mount.auto=proc:rw sys:rw cgroup:rw
      lxc.cgroup.devices.allow = b 8:* rwm
      lxc.cgroup.devices.allow = c 189:* rwm
      lxc.cgroup.devices.allow = c 212:* rwm
      lxc.cgroup.devices.allow = c 116:* rwm
      lxc.cgroup.devices.allow = a
      lxc.hook.mount =
      lxc.cap.drop =
      lxc.hook.post-stop ="
    security.nesting: "true"
    security.privileged: "true"
    user.network-config: |
      version: 1
      config:
        - type: physical
          name: eth0
          subnets:
            - type: dhcp
              ipv4: true
        - type: physical
          name: eth1
          subnets:
            - type: dhcp
              ipv4: true
    user.user-data: |
      #cloud-config
      ssh_authorized_keys:
      - ssh-rsa  pascal
  devices:
    eth0:
      name: eth0
      network: lxdbr0
      type: nic
    eth1:
      nictype: macvlan
      parent: eno1
      type: nic
    root:
      path: /
      pool: circadia
      type: disk
  name: circadia
